<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.mylyn</groupId>
    <artifactId>org.eclipse.mylyn-parent</artifactId>
    <version>3.26.0-SNAPSHOT</version>
    <relativePath>../org.eclipse.mylyn/org.eclipse.mylyn-parent</relativePath>
  </parent>
  <groupId>org.eclipse.mylyn.context</groupId>
  <artifactId>org.eclipse.mylyn.context-parent</artifactId>
  <version>3.26.0-SNAPSHOT</version>
  <name>Mylyn Context</name>
  <packaging>pom</packaging>
  <properties>
    <tycho.scmUrl>scm:git:https://github.com/eclipse-mylyn/org.eclipse.mylyn.context.git</tycho.scmUrl>
  </properties>
  <mailingLists>
    <mailingList>
      <name>Mylyn Context Mailing List</name>
      <post>mylyn-context-dev@eclipse.org</post>
      <subscribe>https://dev.eclipse.org/mailman/listinfo/mylyn-context-dev</subscribe>
      <unsubscribe>https://dev.eclipse.org/mailman/listinfo/mylyn-context-dev</unsubscribe>
      <archive>http://dev.eclipse.org/mhonarc/lists/mylyn-context-dev</archive>
    </mailingList>
  </mailingLists>
  <issueManagement>
    <url>https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced;classification=Mylyn;product=Mylyn%20Context</url>
    <system>Bugzilla</system>
  </issueManagement>
  <repositories>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>mylyn-snapshots</id>
      <url>https://repo.eclipse.org/content/repositories/mylyn-snapshots/</url>
      <layout>default</layout>
    </repository>
    <repository>
      <id>mylyn-releases</id>
      <url>https://repo.eclipse.org/content/repositories/mylyn-releases/</url>
      <layout>default</layout>
    </repository>
  </repositories>
  <profiles>
    <profile>
      <id>implicit-target</id>
      <activation>
        <property>
          <name>!explicit-target</name>
        </property>
      </activation>
      <repositories>
        <repository>
          <id>eclipse-mylyn-commons</id>
          <layout>p2</layout>
          <url>${mylyn-commons-repository-url}</url>
        </repository>
        <repository>
          <id>eclipse-mylyn-tasks</id>
          <layout>p2</layout>
          <url>${mylyn-tasks-repository-url}</url>
        </repository>
        <repository>
          <id>cbi-license</id>
          <layout>p2</layout>
          <url>http://download.eclipse.org/cbi/updates/license/</url>
        </repository>
      </repositories>
    </profile>
    <profile>
      <id>strict</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.tycho</groupId>
            <artifactId>target-platform-configuration</artifactId>
            <version>${tycho-version}</version>
            <configuration>
              <resolver>p2</resolver>
              <target>
                <artifact>
                  <groupId>org.eclipse.mylyn.context</groupId>
                  <artifactId>org.eclipse.mylyn.context-target</artifactId>
                  <version>3.26.0-SNAPSHOT</version>
                  <classifier>mylyn-context-e3.5</classifier>
                </artifact>
              </target>
              <ignoreTychoRepositories>true</ignoreTychoRepositories>
              <environments>
                <environment>
                  <os>macosx</os>
                  <ws>cocoa</ws>
                  <arch>x86</arch>
                </environment>
                <environment>
                  <os>macosx</os>
                  <ws>cocoa</ws>
                  <arch>x86_64</arch>
                </environment>
                <environment>
                  <os>win32</os>
                  <ws>win32</ws>
                  <arch>x86</arch>
                </environment>
                <environment>
                  <os>win32</os>
                  <ws>win32</ws>
                  <arch>x86_64</arch>
                </environment>
                <environment>
                  <os>linux</os>
                  <ws>gtk</ws>
                  <arch>x86</arch>
                </environment>
                <environment>
                  <os>linux</os>
                  <ws>gtk</ws>
                  <arch>x86_64</arch>
                </environment>
              </environments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <modules>
    <module>org.eclipse.mylyn.bugzilla.ide</module>
    <module>org.eclipse.mylyn.cdt-feature</module>
    <module>org.eclipse.mylyn.cdt.tests</module>
    <module>org.eclipse.mylyn.cdt.ui</module>
    <module>org.eclipse.mylyn.context-feature</module>
    <module>org.eclipse.mylyn.context-site</module>
    <module>org.eclipse.mylyn.context-target</module>
    <module>org.eclipse.mylyn.context.core</module>
    <module>org.eclipse.mylyn.context.development-feature</module>
    <module>org.eclipse.mylyn.context.sdk-feature</module>
    <module>org.eclipse.mylyn.context.sdk.java</module>
    <module>org.eclipse.mylyn.context.sdk.util</module>
    <module>org.eclipse.mylyn.context.tasks.tests</module>
    <module>org.eclipse.mylyn.context.tasks.ui</module>
    <module>org.eclipse.mylyn.context.tasks.ui.tests</module>
    <module>org.eclipse.mylyn.context.tests</module>
    <module>org.eclipse.mylyn.context.ui</module>
    <module>org.eclipse.mylyn.debug.ui</module>
    <module>org.eclipse.mylyn.debug.tests</module>
    <module>org.eclipse.mylyn.ide-feature</module>
    <module>org.eclipse.mylyn.ide.ant</module>
    <module>org.eclipse.mylyn.ide.tests</module>
    <module>org.eclipse.mylyn.ide.ui</module>
    <module>org.eclipse.mylyn.java-feature</module>
    <module>org.eclipse.mylyn.java.tasks</module>
    <module>org.eclipse.mylyn.java.tests</module>
    <module>org.eclipse.mylyn.java.ui</module>
    <module>org.eclipse.mylyn.pde-feature</module>
    <module>org.eclipse.mylyn.pde.ui</module>
    <module>org.eclipse.mylyn.resources.tests</module>
    <module>org.eclipse.mylyn.resources.ui</module>
    <module>org.eclipse.mylyn.team-feature</module>
    <module>org.eclipse.mylyn.team.cvs-feature</module>
    <module>org.eclipse.mylyn.team.cvs</module>
    <module>org.eclipse.mylyn.team.tests</module>
    <module>org.eclipse.mylyn.team.ui</module>
  </modules>
</project>
