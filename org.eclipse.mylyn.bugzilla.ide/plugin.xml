<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.mylyn.tasks.core.templates">
      <repository
            addAutomatically="true"
            characterEncoding="ISO-8859-1"
            label="Eclipse.org"
            repositoryKind="bugzilla"
            urlRepository="https://bugs.eclipse.org/bugs"
            version="3.0"/>
   </extension>
   <extension
         point="org.eclipse.mylyn.tasks.bugs.pluginRepositoryMappings">
      <mapping
            pluginIdPrefix="org.eclipse">
         <repository
               kind="bugzilla"
               url="https://bugs.eclipse.org/bugs">
         </repository>
      </mapping>
      <mapping
            pluginIdPrefix="org.eclipse.mylyn">
         <product
               value="%product.name">
         </product>
         <branding
               name="%product.description">
         </branding>
      </mapping>
   </extension>
</plugin>
